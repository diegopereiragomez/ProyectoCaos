---
import { skills } from "@cv";
import Section from "@components/Section.astro";

// const { name, keyword, level } = skills;
---

<Section title="Skills">
    <!-- <h2>{summary}</h2> -->

    <ul>
       { skills.map(({name, level }) =>{
        return(
        <li>
            <span>{name}</span>
        </li>
        <li>
            <span>{level}</span>
        </li>)

        })
    }
    </ul>


</Section>

<style>
    ul{
        display: inline-flex;
        gap: 8px;
        flex-wrap: wrap;
    }
    li{
        border-radius: 6px;
        background: #eee;
        color: black;
        font-size: 0.8rem;
        font-weight: 500;
        padding: 0.2rem auto 0.5rem;
    }
</style>