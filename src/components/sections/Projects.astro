---
import { projects } from "@cv";
import Section from "@components/Section.astro";
---

<Section title="Projects">
 <ul>   {
        projects.map(
            ({ name, startDate, endDate, description, highlights, url }) => {
                const startyear = new Date(startDate).getFullYear();
                const endyear =
                    endDate !== null
                        ? new Date(endDate).getFullYear()
                        : "Actual";
                const years = `${startyear}-${endyear}`;

                return (
                    
                        <li>
                            <article>
                                <header>
                                    <h3>
                                        <a
                                            href={url}
                                            title={`ver el proyecto ${name}`}
                                        >
                                            {name}
                                        </a>
                                    </h3>
                                    <p>{description}</p>
                                </header>
                                <footer>
                                    <span>{years}</span>
                                    <span>
                                        {highlights.map((highlights) => {
                                            return highlights;
                                        })}
                                    </span>
                                </footer>
                            </article>
                        </li>
                  
                );
            },
        )
    }
    </ul>

</Section>

<style>
    ul {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
    }
    article{
        border-radius: 8px;
        border: 1px solid #f2f2f2;
        gap: 16px;
        display: flex;
        flex-direction: column;
        padding: 16px;
        height: 100%;
        min-height: 100%;

        & header{
            flex: 1;

        }

        & a{
            margin-bottom: 4px;
        }

        & p{
            font-size: 0.6rem;
            line-height: 1.2rem;
           
        }
    }
    
    footer{

        display: flex;
        flex-wrap: wrap;
        gap: 14px;
        font-size: 0.6rem;

        & span{
            border-radius: 6px;
            background: #eee;
            color: black;
            font-size: 0.8rem;
            font-weight: 500;
            padding: 0.2rem 0.8rem;


        }
    }
    

</style>
